<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leautolink.leautocamera.ui.activity.DiaglogActivity"
    >


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_gray_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="@string/devices_list"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/diaglog_activity_title_bg"
            android:textColor="@color/normal_text_color"
            />
        <ImageView
            android:id="@+id/iv_close_diaglog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon"
            android:layout_alignParentRight="true"
           android:padding="13dp"
            />
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/lite_blue"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_no_edr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_devices"
            android:layout_below="@id/v_line"
            android:layout_centerHorizontal="true"
            android:textColor="@color/normal_text_color"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/iv_loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_loading_plane"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/v_line"
            android:layout_marginTop="10dp"
            />
        <ListView
            android:id="@+id/lv_wifi_list"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_below="@id/v_line"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:divider="@null"
            >
        </ListView>

        <Button
            android:id="@+id/bt_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/lv_wifi_list"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/update_list"
            android:textColor="@color/normal_text_color"
            android:background="@drawable/normal_btn_selector"
            />
    </RelativeLayout>







</RelativeLayout>
