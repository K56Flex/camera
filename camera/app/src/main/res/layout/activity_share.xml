<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="com.leautolink.leautocamera.ui.activity.WXEntryActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/navigation_bar_left_ib"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingRight="18dp"
            android:src="@drawable/go_back"/>

        <TextView
            android:id="@+id/navigation_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/normal_text_color"
            android:textSize="22sp"/>

        <ImageButton
            android:id="@+id/ibtn_share"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:src="@drawable/share_button"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/img_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="@color/normal_text_color"
        android:textSize="22sp"
        android:text="@string/spring_dating"/>

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_default"/>

    <LinearLayout
        android:id="@+id/share_tabs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lab_share"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/share_to"/>

        <RelativeLayout
            android:id="@+id/lyt_sina_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            >

            <ImageView
                android:id="@+id/Img_sina_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/t_sina_share"
                android:src="@drawable/sina_icon"/>

            <TextView
                android:id="@+id/t_sina_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/sina"
                android:textColor="@color/letv_color_666666"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_weixin_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            >

            <ImageView
                android:id="@+id/Img_weixin_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/t_weixin_share"
                android:src="@drawable/weixin_icon"/>

            <TextView
                android:id="@+id/t_weixin_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/weixin"
                android:textColor="@color/letv_color_666666"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_freinds_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            >

            <ImageView
                android:id="@+id/Img_freinds_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/t_freinds_share"
                android:src="@drawable/wx_freinds"/>

            <TextView
                android:id="@+id/t_freinds_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/weixin_circle"
                android:textColor="@color/letv_color_666666"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_QQ_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            >

            <ImageView
                android:id="@+id/Img_QQ_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/t_QQ_share"
                android:src="@drawable/qq_icon"/>

            <TextView
                android:id="@+id/t_QQ_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="QQ"
                android:textColor="@color/letv_color_666666"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_QQhome_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.0"
            >

            <ImageView
                android:id="@+id/Img_QQhome_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_above="@+id/t_QQhome_share"
                android:layout_centerHorizontal="true"
                android:src="@drawable/qq_home_icon"/>

            <TextView
                android:id="@+id/t_QQhome_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/qq_circlr"
                android:textColor="@color/letv_color_666666"
                android:textSize="11sp"
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ibtn_cancel"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rect_gray"
        android:gravity="center"
        android:text="@string/cancel_download"
        android:textColor="@color/program_item_trance_white2"
        android:textSize="22sp"
        />
</LinearLayout>
